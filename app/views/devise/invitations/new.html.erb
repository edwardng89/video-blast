<h2>Set your password</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control'  } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions",  class: 'btn btn-success block full-width m-b' %>
  </div>
<% end %>
<%= link_to '<i class="fa fa-fw fa-chevron-left"></i> Return to Log in'.html_safe,
            new_session_path(resource_name) %><br />
