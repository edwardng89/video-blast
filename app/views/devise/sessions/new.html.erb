<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5">

      <!-- Brand / heading -->
      <div class="text-center mb-4">
        <%= link_to root_path, class: "text-decoration-none" do %>
          <h1 class="h4 m-0 fw-semibold">Log in to <span class="text-primary">VideoBlast</span></h1>
        <% end %>
      </div>

      <!-- Auth card -->
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">

          <% if flash[:alert].present? %>
            <div class="alert alert-danger mb-3"><%= flash[:alert] %></div>
          <% end %>
          <% if flash[:notice].present? %>
            <div class="alert alert-info mb-3"><%= flash[:notice] %></div>
          <% end %>

          <%= form_with model: resource,
                        as: resource_name,
                        url: session_path(resource_name),
                        local: true do |f| %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-semibold" %>
              <%= f.email_field :email,
                                class: "form-control form-control-lg",
                                autofocus: true,
                                autocomplete: "email",
                                required: true,
                                placeholder: "you@example.com" %>
            </div>

            <div class="mb-2">
              <%= f.label :password, class: "form-label fw-semibold" %>
              <%= f.password_field :password,
                                   class: "form-control form-control-lg",
                                   autocomplete: "current-password",
                                   required: true,
                                   placeholder: "••••••••" %>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              <% end %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small" %>
            </div>

            <%= f.submit "Log In", class: "btn btn-primary btn-lg w-100" %>
          <% end %>
        </div>
      </div>

      <p class="text-center mt-3 mb-0">
        <span class="text-muted">New to VideoBlast?</span>
        <%= link_to "Create an account", new_registration_path(resource_name) %>
      </p>
    </div>
  </div>
</div>
