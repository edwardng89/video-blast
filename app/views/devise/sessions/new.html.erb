<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                    html: { class: 'm-t', role: 'form' }) do |f| %>
  <div class="login-form user-login">
    <div class="form-group">
      <div class="control-wrapper">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-wrapper">
        <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
      </div>
    </div>
    <%= f.button :submit, "Log in", class: 'btn btn-login' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'comn-link pw-forgot'
      %><br/>
    <% end -%>
    <a href="http://mindvision.com.au" class="powered-by" target="_blank">Powered by MindVision</a>
  </div>
<% end %>
