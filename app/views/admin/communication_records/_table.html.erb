<% if @main_list_screen %>
  <!-- screen reference start -->
<% end %>
<div class="page-content <%= "#{controller.controller_name}_#{controller.action_name}" %>">
  <!-- content box -->
  <div class="ibox">
    <div class="ibox-header">
      <div class="mvi-ibox-title">
        <h3><%= "<i class='fa fa-fw fa-#{@icon}'></i>".html_safe if @icon.present? %> <%= @title %></h3>
      </div>
      <div class="mvi-ibox-buttons">
        <div class="ibox-tools">
          <!-- list actions start-->
          <!-- list actions end -->
          <% if can?(:create, CommunicationRecord) && @allow_create %>
            <%= link_to new_polymorphic_path([:admin, :communication_record]),
              class: 'btn btn-new' do %>
              Add New
            <% end %>
          <% end %>
        </div>
        <% if @show_buttons %>
          <%= render partial: 'shared/mvi_control_buttons',
                     locals: { path: admin_communication_records_path, table_name: 'communication_records',
              xls: admin_communication_records_path(format: :xls),
              csv: admin_communication_records_path(format: :csv) } %>
        <% end %>
      </div>
    </div>
    <div class="ibox-body">
      <div class="ibox-filters">
        <div class="filters-inner mb20">
          <div class="row">
            <!-- Filter base start -->
            <!-- Filter base end -->
          </div>
        </div>
      </div>
      <div class="ibox-content pb20">
        <div class="table-responsive">
          <table class="table table-sm  table-striped table-hover  "
          
          >
            <thead>
              <tr>
                <!-- table headings here -->
                <% if can_access_attribute?(:received_at) %>              
                  <th class="text-right  ">Received At</th>
                <% end %>
                <% if can_access_attribute?(:sent_at) %>              
                  <th class="text-right  ">Sent At</th>
                <% end %>
                <% if can_access_attribute?(:body) %>              
                  <th class="text-left  ">Body</th>
                <% end %>
                <% if can_access_attribute?(:subject) %>              
                  <th class="text-left  ">Subject</th>
                <% end %>
                <% if can_access_attribute?(:from) %>              
                  <th class="text-left  ">From</th>
                <% end %>
                <% if can_access_attribute?(:to) %>              
                  <th class="text-left  ">To</th>
                <% end %>
                <% if can?(:read, CommunicationRecord) %>
                  <th class="minimal"></th>
                <% end %>
              </tr>
            </thead>
            <tbody >
              <%= render communication_records %>
              <!-- total row start -->
              <!-- total row end -->
            </tbody>
          </table>
          <div class="page-entry">
            <%= page_entries_info(@communication_records) %>
          </div>
          <%= paginate(@communication_records, remote: true) %>
        </div>
      </div>
    </div>
  </div>
  <!-- /- content box -->
</div>
