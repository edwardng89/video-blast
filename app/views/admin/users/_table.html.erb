<% if @main_list_screen %>
  <!-- screen reference start -->
<% end %>
<div class="page-content <%= "#{controller.controller_name}_#{controller.action_name}" %>">
  <!-- content box -->
  <div class="ibox">
    <div class="ibox-header">
      <div class="mvi-ibox-title">
        <h3><%= "<i class='fa fa-fw fa-#{@icon}'></i>".html_safe if @icon.present? %> <%= @title %></h3>
      </div>
      <div class="mvi-ibox-buttons">
        <div class="ibox-tools">
          <!-- list actions start-->
          <!-- list actions end -->
          <% if can?(:create, User) && @allow_create %>
            <%= link_to new_polymorphic_path([:admin, :user]),
              class: 'btn btn-new' do %>
              Add New
            <% end %>
          <% end %>
        </div>
        <% if @show_buttons %>
          <%= render partial: 'shared/mvi_control_buttons',
                     locals: { path: admin_users_path, table_name: 'users',
              xls: admin_users_path(format: :xls),
              csv: admin_users_path(format: :csv) } %>
        <% end %>
      </div>
    </div>
    <div class="ibox-body">
      <div class="ibox-filters">
        <div class="filters-inner mb20">
          <div class="row">
            <!-- Filter base start -->
            <!-- Filter base end -->
          </div>
        </div>
      </div>
      <div class="ibox-content pb20">
        <div class="table-responsive">
          <table class="table table-sm  table-striped table-hover  "

          >
            <thead>
              <tr>
                <!-- table headings here -->
                <% if can_access_attribute?(:name) %>
                  <th class="text-left  ">Column Name</th>
                <% end %>
                <% if can?(:read, User) %>
                  <th class="minimal"></th>
                <% end %>
              </tr>
            </thead>
            <tbody >
            <%# Collection render %>
              <%= render users %>
              <!-- total row start -->
              <!-- total row end -->
            </tbody>
          </table>
          <div class="page-entry">
            <%# Pagination setup %>
            <%= page_entries_info(@users) %>
          </div>
          <%= paginate(@users, remote: true) %>
        </div>
      </div>
    </div>
  </div>
  <!-- /- content box -->
</div>
