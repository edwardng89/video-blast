<% if @main_list_screen %>
  <!-- screen reference start -->
<% end %>
<div class="page-content <%= "#{controller.controller_name}_#{controller.action_name}" %>">
  <!-- content box -->
  <div class="ibox">
    <div class="ibox-header">
      <div class="mvi-ibox-title">
        <h3><%= "<i class='fa fa-fw fa-#{@icon}'></i>".html_safe if @icon.present? %> <%= @title %></h3>
      </div>
      <div class="mvi-ibox-buttons">
        <div class="ibox-tools">
          <!-- list actions start-->
          <!-- list actions end -->
          <% if can?(:create, Movie) && @allow_create %>
            <%= link_to new_polymorphic_path([:admin, :movie]),
              class: 'btn btn-new' do %>
              Add New
            <% end %>
          <% end %>
        </div>
        <% if @show_buttons %>
          <%= render partial: 'shared/mvi_control_buttons',
                     locals: { path: admin_movies_path, table_name: 'movies',
              xls: admin_movies_path(format: :xls),
              csv: admin_movies_path(format: :csv) } %>
        <% end %>
      </div>
    </div>
    <div class="ibox-body">
      <div class="ibox-filters">
        <div class="filters-inner mb20">
          <div class="row">
            <!-- Filter base start -->
            <!-- Filter base end -->
          </div>
        </div>
      </div>
      <div class="ibox-content pb20">
        <div class="table-responsive">
          <table class="table table-sm  table-striped table-hover  "
          
          >
            <thead>
              <tr>
                <!-- table headings here -->
                <% if can_access_attribute?(:cover) %>              
                  <th class="text-left   minimal">Cover</th>
                <% end %>
                <% if can_access_attribute?(:title) %>              
                  <th class="text-left  ">Title</th>
                <% end %>
                <% if can_access_attribute?(:released_on) %>              
                  <th class="text-right   minimal">Released On</th>
                <% end %>
                <% if can_access_attribute?(:content_rating) %>              
                  <th class="text-left   minimal">Content Rating</th>
                <% end %>
                <% if can_access_attribute?(:description) %>              
                  <th class="text-left  ">Description</th>
                <% end %>
                <% if can_access_attribute?(:active) %>              
                  <th class="text-left   minimal">Active</th>
                <% end %>
                <% if can?(:read, Movie) %>
                  <th class="minimal"></th>
                <% end %>
              </tr>
            </thead>
            <tbody >
              <%= render movies %>
              <!-- total row start -->
              <!-- total row end -->
            </tbody>
          </table>
          <div class="page-entry">
            <%= page_entries_info(@movies) %>
          </div>
          <%= paginate(@movies, remote: true) %>
        </div>
      </div>
    </div>
  </div>
  <!-- /- content box -->
</div>
