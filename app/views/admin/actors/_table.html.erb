<div class="page-content">
  <div class="ibox">
    <div class="ibox-header">
      <div class="mvi-ibox-title">
        <h3><i class="fa fa-users"></i> Actors</h3>
      </div>

      <div class="mvi-ibox-buttons">
        <% if can?(:create, Actor) %>
          <%= link_to new_admin_actor_path, class: "btn btn-new" do %>
            Add New
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="ibox-body">
      <!-- Filter bar -->
      <div class="ibox-filters">
        <div class="filters-inner mb20">
          <%= form_with url: admin_actors_path, method: :get, local: true,
                        html: { class: "row g-2 align-items-end" } do %>
            <div class="col-md-6">
              <label class="form-label small mb-1">Search for:</label>
              <%= text_field_tag :q, params[:q],
                    class: "form-control",
                    placeholder: "Search on First Name, Last Name" %>
            </div>

            <div class="col-md-2">
              <%= submit_tag "Go", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Table -->
      <div class="ibox-content pb20">
        <div class="table-responsive">
          <table class="table table-sm table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Gender</th>
                <th class="text-end minimal"></th>
              </tr>
            </thead>
            <tbody>
              <% @actors.each do |a| %>
                <tr>
                  <td><%= [a.first_name, a.last_name].compact.join(" ") %></td>
                  <td><%= a.gender.to_s.humanize.presence || "â€”" %></td>
                  <td class="text-end">
                    <% if can?(:update, a) %>
                      <%= link_to edit_admin_actor_path(a), class: "btn btn-sm btn-outline-primary", title: "Edit" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="d-flex justify-content-between align-items-center mt-2">
            <div><%= page_entries_info(@actors) %></div>
            <%= paginate(@actors) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
