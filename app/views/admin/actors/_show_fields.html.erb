<!-- fieldset code here -->  
<div class="row mb20">
  <!-- fields go here -->
  <% if can_access_attribute?(:first_name) %>
    <div class="col-lg-3">
      <div class="form-group">
        <div class="control-wrapper">
          <div class='input'>
            <%= label_tag 'First Name', 'First Name:' %>
            <div class="form-control read-only text-left">
              <%= actor.first_name %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% if can_access_attribute?(:last_name) %>
    <div class="col-lg-3">
      <div class="form-group">
        <div class="control-wrapper">
          <div class='input'>
            <%= label_tag 'Last Name', 'Last Name:' %>
            <div class="form-control read-only text-left">
              <%= actor.last_name %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% if can_access_attribute?(:gender) %>
    <div class="col-lg-3">
      <div class="form-group">
        <div class="control-wrapper">
          <div class='input'>
            <%= label_tag 'Gender', 'Gender:' %>
            <div class="form-control read-only text-left">
              <%= actor.gender %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% if can_access_attribute?(:birth_date) %>
    <div class="col-lg-3">
      <div class="form-group">
        <div class="control-wrapper">
          <div class='input'>
            <%= label_tag 'Birth Date', 'Birth Date:' %>
            <div class="form-control read-only text-left">
              <%= actor.birth_date %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
