<div class="background">
  <div class="loginColumns animated fadeInDown login-screen">
    <div class="row">
      <div class="col-md-6">
        <h2 class="font-bold">{{ project_title }}</h2>
      </div>
      <div class="col-md-6">
        <div class="ibox-content">
          <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>
            <div id="flashes" class="login-flash">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
            <%= f.hidden_field :invitation_token %>
            <div class="form-group">
              <%= f.input :password, label: "New password", required: true, autofocus: true,
                          input_html: { class: 'form-control password-input' } %>
            </div>
            <div class="form-group">
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true,
                          input_html: { class: 'form-control' } %>
            </div>
            <meter max="4" id="password-strength-meter"></meter>
            <p class="input-container" id="password-strength-text"></p>
            <%= f.button :submit, t("devise.invitations.edit.submit_button"), disabled: true,
                         class: 'btn btn-success block full-width m-b' %>
          <% end %>
        </div>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-6 text-right">
        <small>Site by MindVision - Realise the benefits of Innovation</small>
      </div>
    </div>
  </div>
</div>
