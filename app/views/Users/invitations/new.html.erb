<div class="background">
  <div class="loginColumns animated fadeInDown login-screen">
    <div class="row">
      <div class="col-md-6">
        <h2 class="font-bold">{{ project_title }}</h2>
      </div>
      <div class="col-md-6">
        <div class="ibox-content">
          <h2><%= t "devise.invitations.new.header" %></h2>
          <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post} do |f| %>
            <div id="flashes" class="login-flash">
              <% if devise_error_messages!.present? %>
                <div class="alert alert-error"><%= devise_error_messages! %></div>
              <% end %>
            </div>
            <% resource.class.invite_key_fields.each do |field| -%>
              <div class="form-group">
                <%= f.input field, input_html: { class: 'form-control' } %>
              </div>
            <% end -%>
            <%= f.button :submit, t("devise.invitations.new.submit_button"), disabled: true,
                         class: 'btn btn-success block full-width m-b' %>
          <% end %>
        </div>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-6 text-right">
        <small>Site by MindVision - Realise the benefits of Innovation</small>
      </div>
    </div>
  </div>
</div>
